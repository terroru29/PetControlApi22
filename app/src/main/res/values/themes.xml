<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PetControlApi22" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@android:color/holo_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFF00BF</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Barra inferior (visualiza las demás pantallas abiertas) -->
        <item name="android:navigationBarColor">@android:color/transparent</item>-->
        <!-- Poner pantalla completa (desaparece barra superior con: hora, batería...) -->
        <item name="android:windowFullscreen">true</item>
        <!-- Si está en false no funciona la aplicación -->
        <item name="windowActionBar">true</item>
        <!-- Activa/desactiva la barra superior del título -->
        <item name="windowNoTitle">false</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="hints">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="tags">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>